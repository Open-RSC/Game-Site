extends layout

block content
  div.middle-content-server
    div.logo(role="banner")
    p.subtitle RuneScape Classic with custom content and QoL additions.
    div.cabbage-buttons
      a.button(target="_blank", href="downloads/OpenRSC.jar") Windows
        br
        | Download
      a.button(target="_blank", href="downloads/openrsc.apk") Android
        br
        | Download
      a.button(href="cabbage/hiscores") Hiscores

    hr

    div.statistics
      h3 Statistics
      div
        dl
          dt Players Online:
          dd #{online}
          dt Players Created Today:
          dd #{created}
          dt Online Last 48 Hours:
          dd #{last}
          dt Unique Players:
          dd #{unique}
          dt Total Players:
          dd #{total}
      