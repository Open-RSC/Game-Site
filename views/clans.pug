extends layout

block content
  div.middle-content-hiscores
    div.title.hiscores-panel
      h2.hiscores-title #{clan_name}
      a.hiscores-link(href=server) Return to main menu
    
    div.hiscores.player
      div.hiscore-links.players-info
        h4
          span Clan Info
        div.hiscores-panel.players-nav
          dl
            dt Name:
            dd #{clan_name}
            dt Tag:
            dd #{clan_tag}
            dt Leader:
            dd #{leader[1]}
            dt Members:
            dd #{member_count}
            dt Total Skill:
            dd #{total_skill}
            dt(title="Total skill divided by number of members") Average Skill:
            dd #{average_skill}

          a.hiscores-link(href="/cabbage/clans") Back to all clans

      div.hiscore-table.players-skills
        h4 Members
        div.hiscores-panel
          table
            thead
              th Rank
              th Name
              th Total
              th Combat
            tbody
              tr
                each column, idx in leader
                  if idx === 1
                    td
                      a(href="../player/" + column) #{column}
                  else
                    td= column
              each row in generals
                tr
                  each column, idx in row
                    if idx === 1
                      td
                        a(href="../player/" + column) #{column}
                    else
                      td= column
              each row in members
                tr
                  each column, idx in row
                    if idx === 1
                      td
                        a(href="../player/" + column) #{column}
                    else
                      td= column
