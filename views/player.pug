extends layout

block content
  div.middle-content-hiscores
    div.title.hiscores-panel
      h2.hiscores-title #{username}
      a.hiscores-link(href=server) Return to main menu
    
    div.hiscores.player
      div.hiscore-links.players-info
        h4
          span Player Info
        div.hiscores-panel.players-nav
          dl
            dt Combat:
            dd #{combat}
            dt Quest Points:
            dd #{quest_points}
            if ironman !== undefined
              dt Ironman:
              dd #{ironman}
            if clan !== undefined
              dt Clan:
              dd #{clan}
            if experience_rate !== undefined
              dt Exp Rate:
              dd #{experience_rate}
            dt Player Kills:
            dd #{player_kills}
            dt NPC Kills:
            dd #{npc_kills}
            dt Deaths:
            dd #{deaths}
          a.hiscores-link(href="../hiscores") Back to all scores
      div.hiscore-table.players-skills
        h4 Skills
        div.hiscores-panel
          table
            thead
              th Skill
              th Level
              th XP
              th Rank
            tbody
              each row in hiscores
                tr
                  each column in row
                    td= column
